<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal"
    android:background="@layout/layer_list_dict_item_back"
    android:layout_gravity="top">

    <TextView
        android:id="@+id/id_note_text_word"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/id_note_text_interpret"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_weight="4"
        android:textSize="14.5sp" />

    <Button
        android:id="@+id/id_note_worditem_btn_grasp"
        android:layout_width="0dp"
        android:layout_margin="5dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:textSize="16sp"
        android:background="@drawable/tab_btn_note_grasp" />

    <ImageButton
        android:id="@+id/image_note_btn_delete"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="#ffff"
        android:scaleType="fitXY"
        android:layout_marginRight="3dp"
        android:src="@mipmap/deletefromnote" />
</LinearLayout>